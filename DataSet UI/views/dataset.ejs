<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Image Dataset</title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
    <div class="container">
        <h1>Image View Page</h1>
        <div class="row">
            <div class="col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <img style="height: 400px; width: 300px;" class="center" src="<%= result.image_url %>">
                    </div>
                </div>
            </div>
        </div>
        <div>
            <button onclick="save('<%= result._id %>', 1)">Yes</button>
            <button onclick="save('<%= result._id %>', 0)">No</button>
        </div>
    </div>
</body>
<script>
    function save(id, action){
        const xhr = new XMLHttpRequest();
        xhr.onload = function () {
            if (xhr.status >= 200 && xhr.status < 300) {
                console.log(xhr.responseText);
                window.location.reload()
            } else {
                console.log(xhr.responseText);
            }
        };
        xhr.open('PUT', `http://localhost:3001/saveimage/${id}/${action === 1}`);
        xhr.send();
    }
</script>
</html>